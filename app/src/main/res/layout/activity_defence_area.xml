<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cvte.defenceareademo.DefenceAreaLayout
        android:id="@+id/dal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defenceAreaName="防区1"/>

    <com.cvte.defenceareademo.DefenceAreaLayout
        android:id="@+id/dal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defenceAreaName="防区2"/>

    <com.cvte.defenceareademo.DefenceAreaLayout
        android:id="@+id/dal3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defenceAreaName="防区3"/>

    <com.cvte.defenceareademo.DefenceAreaLayout
        android:id="@+id/dal4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defenceAreaName="防区4"/>

    <com.cvte.defenceareademo.DefenceAreaLayout
        android:id="@+id/dal5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defenceAreaName="防区5"/>

    <com.cvte.defenceareademo.DefenceAreaLayout
        android:id="@+id/dal6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defenceAreaName="防区6"/>

    <com.cvte.defenceareademo.DefenceAreaLayout
        android:id="@+id/dal7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defenceAreaName="防区7"/>

    <com.cvte.defenceareademo.DefenceAreaLayout
        android:id="@+id/dal8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defenceAreaName="防区8"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:transcriptMode="alwaysScroll"/>
</LinearLayout>